@model _2016_03_29_Asp.net.Models.Orders

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>InsertOrderIndex</title>
</head>
<body>
    @using (Html.BeginForm("InsertOrder", "Order", FormMethod.Post, new { id = "Form2" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    <div><h3>新增訂單</h3></div>
    <div>
        <table class="table" style="width:75%">
            <tr>
                <td>
                    <h5>客戶名稱</h5>
                </td>
                <td>
                    @Html.DropDownListFor(model => model.CustomerID, (List<SelectListItem>)ViewBag.cust)
                </td>
            </tr>
            <tr>
                <td>
                    <h5>負責員工姓名</h5>
                </td>
                <td>
                    @Html.DropDownListFor(model => model.EmployeeID, (List<SelectListItem>)ViewBag.empInfo)
                </td>
            </tr>
            <tr>
                <td>
                    <h5>訂購日期</h5>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.OrderDate, new { @type = "date" })
                </td>
                <td>
                    <h5>需要日期</h5>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.RequiredDate, new { @type = "date" })
                </td>
            </tr>
            <tr>
                <td>
                    <h5>出貨日期</h5>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ShippedDate, new { @type = "date" })
                </td>
            </tr>
            <tr>
                <td>
                    <h5>出貨公司名稱</h5>
                </td>
                <td>
                    @Html.DropDownListFor(model => model.ShipperID, (List<SelectListItem>)ViewBag.companyInfo)
                </td>
            </tr>
            <tr>
                <td>
                    <h5>出貨國家</h5>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ShipCountry)
                </td>
                <td>
                    <h5>出貨城市</h5>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ShipCity)
                </td>
            </tr>
            <tr>
                <td>
                    <h5>出貨地區</h5>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ShipRegion)
                </td>
                <td>
                    <h5>郵遞區號</h5>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ShipPostalCode)
                </td>
            </tr>
            <tr>
                <td>
                    <h5>出貨地址</h5>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ShipAddress)
                </td>
                <td>
                    <h5>出貨說明</h5>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.ShipName)
                </td>
            </tr>
            <tr>
                <td>金額總計</td>
                <td>
                    <input type="text" id="orderSum" value="" disabled>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="存檔">
                    @Html.ActionLink("返回","./Index")
                </td>
            </tr>
        </table> 
    </div>
    
}
</body>
</html>
